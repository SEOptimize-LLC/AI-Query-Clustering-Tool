# =============================================================================
# AI Keyword Clustering - API Keys Configuration
# =============================================================================
# 
# INSTRUCTIONS:
# 1. Copy this file to 'secrets.toml' (remove .example)
# 2. Fill in your actual API keys
# 3. NEVER commit secrets.toml to version control!
#
# For Streamlit Cloud deployment:
# Go to your app settings -> Secrets and paste the contents
# =============================================================================

# Supabase Database
# Get these from: https://supabase.com -> Your Project -> Settings -> API
SUPABASE_URL = "https://your-project-id.supabase.co"
SUPABASE_KEY = "your-anon-public-key"

# OpenAI API (for embeddings)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY = "sk-..."

# OpenRouter (for LLM labeling)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY = "sk-or-..."

# DataForSEO (for keyword metrics)
# Get from: https://dataforseo.com/apis
DATAFORSEO_LOGIN = "your-login-email"
DATAFORSEO_PASSWORD = "your-api-password"

# Serper.dev (for SERP data)
# Get from: https://serper.dev/api-key
SERPER_API_KEY = "your-serper-api-key"